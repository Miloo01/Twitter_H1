<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>

<p>
  <%= @tweet.likes.count %> <%= @tweet.likes.count == 1 ? 'Like' : 'Likes' %>
</p>

<% pre_like = @tweet.likes.find { |like| like.user_id == current_user.id } %>

<% if pre_like %>
  <%= link_to 'Dislike', tweet_like_path(@tweet, pre_like), method: :delete %>
<% else %>
  <%= link_to 'Like', tweet_likes_path(@tweet), method: :post %>
<% end %>

